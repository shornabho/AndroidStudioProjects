<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mcs.android.firebasechat">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_chatty"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_chatty_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FirebaseChat">
        <activity android:name=".ChatActivity" android:theme="@style/Theme.FirebaseChat.NoActionBar" />
        <activity android:name=".AllChatsActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>