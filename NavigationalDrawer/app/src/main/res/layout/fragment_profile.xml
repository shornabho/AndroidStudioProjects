<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
    tools:context=".ProfileFragment">

    <ImageView
        android:id="@+id/imageViewUserProfileImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="68dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/swarnava"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewUserFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Swarnava Ghosh"
        android:textColor="@color/teal_700"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewUserProfileImage" />

    <TextView
        android:id="@+id/textViewUserUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="\@shornabho"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewUserFullName" />

    <TextView
        android:id="@+id/textViewUserBio"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed tristique ante a orci tincidunt facilisis. Aliquam iaculis sem ac purus bibendum, eget facilisis neque dignissim. Ut ac leo ornare, sollicitudin ligula eu, commodo libero. Maecenas quis leo nec dui elementum vehicula. Ut sed bibendum est. Sed accumsan enim leo, non tempus leo blandit et. Pellentesque faucibus tempor ex, accumsan accumsan dui efficitur in. Praesent in ullamcorper lorem. Integer sit amet accumsan magna. Aenean viverra ac mi eget bibendum. Mauris nibh."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewUserUsername" />
</androidx.constraintlayout.widget.ConstraintLayout>