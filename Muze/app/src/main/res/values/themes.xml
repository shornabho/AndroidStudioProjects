<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Muze" parent="Theme.AppCompat.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/beige</item>
        <item name="colorPrimaryVariant">@color/light_beige</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/beige</item>
        <item name="colorSecondaryVariant">@color/light_beige</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_blue</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="seekbar_color" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/light_beige</item>
        <item name="android:progressTint">@color/beige</item>
        <item name="android:colorControlActivated">@color/light_beige</item>
    </style>
</resources>